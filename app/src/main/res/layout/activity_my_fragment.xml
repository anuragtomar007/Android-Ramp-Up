<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsTask.MyFragmentActivity">

    <EditText
        android:id="@+id/frag_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20sp" />

    <Button
        android:id="@+id/fragBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frag_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Send data to another Fragment" />

    <Button
        android:id="@+id/fragToActivityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Send the data to another Activity" />

</RelativeLayout>